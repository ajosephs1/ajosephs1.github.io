---
import mail from "../assets/icons/social/envelope-solid.svg";
import github from "../assets/icons/social/github.svg";
import linkeldin from "../assets/icons/social/linkedin.svg";
import "../styles/components/Contact.scss";
---

<section class="contact" id="contact">
  <fieldset class="contact__fieldset">
    <legend class="contact__legend">CONTACT ME</legend>
    <div class="contact__links">
      <a
        href="mailto: andrew_josephs@outlook.com"
        target="_blank"
        class="contact__link"
      >
        <img
          src={mail.src}
          alt="email icon"
          class="contact__icon"
          loading="lazy"
        />
      </a>
      <a
        href="https://linkedin.com/in/andrewjosephs1/"
        target="_blank"
        class="contact__link"
      >
        <img
          src={linkeldin.src}
          alt="linkein icon"
          class="contact__icon"
          loading="lazy"
        />
      </a>
      <a
        href="https://github.com/ajosephs1"
        target="_blank"
        class="contact__link"
      >
        <img
          src={github.src}
          alt="github icon"
          class="contact__icon"
          loading="lazy"
        />
      </a>
    </div>
  </fieldset>
</section>
